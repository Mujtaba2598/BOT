    <script>
        /**
         * Halal AI Trading Bot - COMPLETE FRONTEND LOGIC
         * All JavaScript in this single file
         */
        
        // Configuration
        const CONFIG = {
            pollingInterval: 30000, // 30 seconds (for 1 hour target)
            maxRiskPerTrade: 0.1, // 10% risk per trade
            hourlyTargetMultiplier: 1000 // 1000x in 1 hour
        };
        
        // Global state
        let state = {
            isConnected: false,
            isTrading: false,
            currentProfit: 0,
            initialInvestment: 1,
            targetProfit: 1000,
            timeLimit: 1,
            startTime: null,
            trades: [],
            accountInfo: null,
            pollingInterval: null,
            sessionId: null,
            riskLevel: 'medium',
            tradingSpeed: 'balanced'
        };
        
        // Halal-compliant trading pairs
        const HALAL_PAIRS = [
            'BTCUSDT', 'ETHUSDT', 'BNBUSDT', 'XRPUSDT',
            'ADAUSDT', 'DOTUSDT', 'LINKUSDT', 'MATICUSDT',
            'SOLUSDT'
        ];
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadUserSession();
            updateUI();
        });
        
        // Load user session
        function loadUserSession() {
            const savedEmail = localStorage.getItem('halalBot_email');
            const savedAccount = localStorage.getItem('halalBot_account');
            
            if (savedEmail) {
                document.getElementById('email').value = savedEmail;
                document.getElementById('userEmail').textContent = savedEmail;
            }
            
            if (savedAccount) {
                document.getElementById('accountNumber').value = savedAccount;
            }
            
            const savedSettings = localStorage.getItem('halalBot_settings');
            if (savedSettings) {
                const settings = JSON.parse(savedSettings);
                state.targetProfit = settings.targetProfit || 1000;
                state.initialInvestment = settings.initialInvestment || 1;
                state.timeLimit = settings.timeLimit || 1;
                state.riskLevel = settings.riskLevel || 'medium';
                state.tradingSpeed = settings.tradingSpeed || 'balanced';
                
                document.getElementById('initialInvestment').value = state.initialInvestment;
                document.getElementById('targetProfit').value = state.targetProfit;
                document.getElementById('timeLimit').value = state.timeLimit;
                document.getElementById('riskLevel').value = state.riskLevel;
                document.getElementById('tradingSpeed').value = state.tradingSpeed;
            }
        }
        
        // Save settings
        function saveSettings() {
            const settings = {
                targetProfit: state.targetProfit,
                initialInvestment: state.initialInvestment,
                timeLimit: state.timeLimit,
                riskLevel: state.riskLevel,
                tradingSpeed: state.tradingSpeed,
                email: document.getElementById('email').value
            };
            
            localStorage.setItem('halalBot_settings', JSON.stringify(settings));
            localStorage.setItem('halalBot_email', document.getElementById('email').value);
            localStorage.setItem('halalBot_account', document.getElementById('accountNumber').value);
        }
        
        // Connect to Binance via backend
        async function connectToBinance() {
            const email = document.getElementById('email').value;
            const accountNumber = document.getElementById('accountNumber').value;
            const apiKey = document.getElementById('apiKey').value;
            const secretKey = document.getElementById('secretKey').value;
            const accountType = document.getElementById('accountType').value;
            const backendUrl = document.getElementById('backendUrl').value;
            
            if (!email || !accountNumber || !apiKey || !secretKey) {
                showStatus('Please fill in all required fields', 'error');
                return;
            }
            
            showStatus('Connecting to Binance...', 'info');
            
            try {
                const response = await fetch(`${backendUrl}/api/connect`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, accountNumber, apiKey, secretKey, accountType })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    state.isConnected = true;
                    state.accountInfo = data.accountInfo;
                    state.sessionId = data.sessionId;
                    
                    showStatus('âœ… Connected to Binance! 1 Hour Target Ready!', 'success');
                    updateConnectionStatus(true);
                    saveSettings();
                    
                    document.getElementById('userEmail').textContent = email;
                    document.getElementById('startBtn').disabled = false;
                    
                    addTradeLog('SYSTEM', 'ðŸš€ Connected to Binance - Ready for 1 Hour 1000x Trading!', 0, 'success');
                } else {
                    showStatus('Connection failed: ' + data.message, 'error');
                }
            } catch (error) {
                showStatus('Connection error: ' + error.message, 'error');
            }
        }
        
        // Start trading
        async function startTrading() {
            if (!state.isConnected) {
                showStatus('Please connect to Binance first', 'error');
                return;
            }
            
            state.initialInvestment = parseFloat(document.getElementById('initialInvestment').value) || 1;
            state.targetProfit = parseFloat(document.getElementById('targetProfit').value) || 1000;
            state.timeLimit = parseFloat(document.getElementById('timeLimit').value) || 1;
            state.riskLevel = document.getElementById('riskLevel').value;
            state.tradingSpeed = document.getElementById('tradingSpeed').value;
            
            const pairSelect = document.getElementById('tradingPairs');
            const selectedPairs = Array.from(pairSelect.selectedOptions).map(opt => opt.value);
            
            if (selectedPairs.length === 0) {
                showStatus('Please select at least one trading pair', 'error');
                return;
            }
            
            const backendUrl = document.getElementById('backendUrl').value;
            
            showStatus('ðŸš€ Starting 1 Hour Target: $1 â†’ $1000', 'info');
            
            try {
                const response = await fetch(`${backendUrl}/api/startTrading`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        sessionId: state.sessionId,
                        initialInvestment: state.initialInvestment,
                        targetProfit: state.targetProfit,
                        timeLimit: state.timeLimit,
                        riskLevel: state.riskLevel,
                        tradingSpeed: state.tradingSpeed,
                        tradingPairs: selectedPairs
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    state.isTrading = true;
                    state.startTime = new Date();
                    state.currentProfit = 0;
                    state.trades = [];
                    
                    startPolling();
                    
                    document.getElementById('startBtn').disabled = true;
                    document.getElementById('stopBtn').disabled = false;
                    
                    showStatus('ðŸ”¥ 1 HOUR TARGET ACTIVE! $1 â†’ $1000', 'success');
                    updateBotStatus(true);
                    
                    saveSettings();
                    
                    addTradeLog('SYSTEM', 'ðŸš€ 1 HOUR TARGET STARTED: $1 â†’ $1000', 0, 'success');
                }
            } catch (error) {
                showStatus('Start trading error: ' + error.message, 'error');
            }
        }
        
        // Stop trading
        async function stopTrading() {
            const backendUrl = document.getElementById('backendUrl').value;
            
            showStatus('Stopping 1 Hour Target bot...', 'info');
            
            try {
                const response = await fetch(`${backendUrl}/api/stopTrading`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ sessionId: state.sessionId })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    state.isTrading = false;
                    
                    stopPolling();
                    
                    document.getElementById('startBtn').disabled = false;
                    document.getElementById('stopBtn').disabled = true;
                    
                    const finalProfit = state.currentProfit;
                    const multiplier = (finalProfit / state.initialInvestment).toFixed(2);
                    
                    showStatus('âœ… Trading stopped! Profit: $' + finalProfit.toFixed(2) + ' (' + multiplier + 'x)', 'success');
                    updateBotStatus(false);
                    
                    addTradeLog('SYSTEM', 'âœ… Trading stopped. Final: $' + finalProfit.toFixed(2) + ' (' + multiplier + 'x)', 0, 'info');
                }
            } catch (error) {
                showStatus('Stop trading error: ' + error.message, 'error');
            }
        }
        
        // Start polling
        function startPolling() {
            stopPolling();
            state.pollingInterval = setInterval(pollForUpdates, CONFIG.pollingInterval);
        }
        
        // Stop polling
        function stopPolling() {
            if (state.pollingInterval) {
                clearInterval(state.pollingInterval);
                state.pollingInterval = null;
            }
        }
        
        // Poll for updates
        async function pollForUpdates() {
            if (!state.isTrading) return;
            
            const backendUrl = document.getElementById('backendUrl').value;
            
            try {
                const response = await fetch(`${backendUrl}/api/tradingUpdate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        sessionId: state.sessionId,
                        currentProfit: state.currentProfit,
                        targetProfit: state.targetProfit,
                        initialInvestment: state.initialInvestment,
                        timeLimit: state.timeLimit
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    if (data.currentProfit !== undefined) {
                        state.currentProfit = data.currentProfit;
                    }
                    
                    if (data.newTrades && data.newTrades.length > 0) {
                        data.newTrades.forEach(trade => {
                            addTradeLog(
                                trade.symbol || trade.pair,
                                `${trade.side || trade.type} ${trade.quantity} @ $${trade.price}`,
                                trade.profit || 0,
                                (trade.profit || 0) >= 0 ? 'success' : 'failure'
                            );
                            state.trades.push(trade);
                        });
                    }
                    
                    // Check if target reached
                    if (state.currentProfit >= state.targetProfit) {
                        const multiplier = (state.currentProfit / state.initialInvestment).toFixed(2);
                        showStatus(`ðŸŽ‰ TARGET REACHED! $1 â†’ $${state.currentProfit.toFixed(2)} (${multiplier}x)`, 'success');
                        addTradeLog('SYSTEM', `ðŸ† 1 HOUR TARGET ACHIEVED! $1 â†’ $${state.currentProfit.toFixed(2)}`, 0, 'success');
                        stopTrading();
                    }
                    
                    // Check time limit (in hours)
                    if (state.startTime) {
                        const hoursElapsed = (new Date() - state.startTime) / (1000 * 60 * 60);
                        if (hoursElapsed >= state.timeLimit) {
                            showStatus('Time limit reached. Stopping bot.', 'warning');
                            addTradeLog('SYSTEM', 'Time limit reached. Stopping bot.', 0, 'warning');
                            stopTrading();
                        }
                    }
                    
                    updateUI();
                }
            } catch (error) {
                console.error('Polling error:', error);
            }
        }
        
        // Reset bot
        function resetBot() {
            if (state.isTrading) {
                if (!confirm('Reset will stop current trading. Continue?')) return;
                stopTrading();
            }
            
            state.currentProfit = 0;
            state.trades = [];
            state.initialInvestment = 1;
            state.targetProfit = 1000;
            
            document.getElementById('initialInvestment').value = 1;
            document.getElementById('targetProfit').value = 1000;
            
            document.getElementById('tradesList').innerHTML = `
                <div class="trade-item trade-pending">
                    <div>
                        <div class="trade-pair">BTC/USDT</div>
                        <div style="font-size: 12px; color: var(--text-light);">Reset completed. Ready for 1 hour target!</div>
                    </div>
                    <div class="trade-profit">$0.00</div>
                </div>
            `;
            
            updateUI();
            showStatus('Bot reset. Ready for $1 â†’ $1000 in 1 hour!', 'info');
        }
        
        // Add trade to log
        function addTradeLog(pair, description, profit, type = 'info') {
            const tradesList = document.getElementById('tradesList');
            
            const tradeItem = document.createElement('div');
            tradeItem.className = `trade-item trade-${type}`;
            
            const profitClass = profit >= 0 ? 'profit-positive' : 'profit-negative';
            const profitSign = profit >= 0 ? '+' : '';
            
            const now = new Date();
            const timeStr = now.toLocaleTimeString();
            
            tradeItem.innerHTML = `
                <div>
                    <div class="trade-pair">${pair}</div>
                    <div style="font-size: 12px; color: var(--text-light);">${description} [${timeStr}]</div>
                </div>
                <div class="trade-profit ${profitClass}">${profitSign}$${Math.abs(profit).toFixed(2)}</div>
            `;
            
            tradesList.insertBefore(tradeItem, tradesList.firstChild);
            
            const items = tradesList.getElementsByClassName('trade-item');
            if (items.length > 30) tradesList.removeChild(items[items.length - 1]);
        }
        
        // Update UI
        function updateUI() {
            document.getElementById('currentProfit').textContent = '$' + state.currentProfit.toFixed(2);
            document.getElementById('targetAmount').textContent = '$' + state.targetProfit.toFixed(2);
            document.getElementById('tradesCount').textContent = state.trades.length;
            
            const multiplier = state.initialInvestment > 0 ? (state.currentProfit / state.initialInvestment).toFixed(1) : '0';
            document.getElementById('multiplier').textContent = multiplier + 'x';
            
            if (state.isTrading && state.startTime) {
                const elapsed = (new Date() - state.startTime) / (1000 * 60 * 60);
                const progress = Math.min(100, (state.currentProfit / state.targetProfit) * 100);
                const timeLeft = Math.max(0, state.timeLimit - elapsed).toFixed(1);
                
                document.getElementById('statusMessage').textContent = 
                    `ðŸŽ¯ ${progress.toFixed(1)}% complete, ${timeLeft} hours remaining`;
            }
        }
        
        // Update connection status
        function updateConnectionStatus(connected) {
            const statusElement = document.getElementById('connectionStatus');
            const statusDot = statusElement.querySelector('.status-dot');
            
            if (connected) {
                statusElement.className = 'status-indicator status-active';
                statusDot.className = 'status-dot active';
                statusElement.querySelector('span:last-child').textContent = 'Connected to Binance';
            } else {
                statusElement.className = 'status-indicator status-inactive';
                statusDot.className = 'status-dot inactive';
                statusElement.querySelector('span:last-child').textContent = 'Disconnected';
            }
        }
        
        // Update bot status
        function updateBotStatus(trading) {
            const statusElement = document.getElementById('botStatus');
            const statusDot = statusElement.querySelector('.status-dot');
            
            if (trading) {
                statusElement.className = 'status-indicator status-active';
                statusDot.className = 'status-dot fast';
                statusElement.querySelector('span:last-child').textContent = 'Bot Status: 1 HOUR TARGET';
            } else {
                statusElement.className = 'status-indicator status-inactive';
                statusDot.className = 'status-dot inactive';
                statusElement.querySelector('span:last-child').textContent = 'Bot Status: Stopped';
            }
        }
        
        // Show status message
        function showStatus(message, type = 'info') {
            document.getElementById('statusMessage').textContent = message;
            console.log(`[${type.toUpperCase()}] ${message}`);
        }
    </script>
</body>
</html>
